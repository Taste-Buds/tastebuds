<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72sp"
    android:paddingLeft="8sp"
    android:paddingRight="8sp" >

    <ImageView
        android:id="@+id/ivProfileImg"
        android:layout_width="56sp"
        android:layout_height="56sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

    <TextView
        android:id="@+id/tvFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        android:layout_toRightOf="@+id/ivProfileImg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvFriendName"
        android:layout_below="@+id/tvFriendName"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvRestaurantReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvLocation"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvFriendName"
        android:drawableLeft="@drawable/ic_restaurant"
        android:text="11" />

    <TextView
        android:id="@+id/tvDishReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvLocation"
        android:layout_alignBottom="@+id/tvLocation"
        android:layout_alignLeft="@+id/tvRestaurantReviews"
        android:drawableLeft="@drawable/ic_dish_review"
        android:text="10" />

</RelativeLayout>
