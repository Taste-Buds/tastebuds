<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96sp"
    android:paddingLeft="8sp"
    android:paddingRight="8sp" >

    <ImageView
        android:id="@+id/ivRestaurantImage"
        android:layout_width="56sp"
        android:layout_height="56sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:src="@drawable/abs__ab_bottom_solid_dark_holo" />

    <TextView
        android:id="@+id/tvRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivRestaurantImage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        android:text="Restaurant Name" 
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <RatingBar
        android:id="@+id/rbTasteBudsRating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRestaurantName"
        android:layout_toRightOf="@+id/ivRestaurantImage"
        android:layout_marginLeft="8sp"
        android:isIndicator="true" />

    <TextView
        android:id="@+id/tvNumberofReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbTasteBudsRating"
        android:layout_toRightOf="@+id/ivRestaurantImage"
        android:layout_marginLeft="8sp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvRestaurantName"
        android:layout_alignParentRight="true"
        android:text="Distance"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>
